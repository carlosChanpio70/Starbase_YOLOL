include "std/math"

if :IS==1 then
    :Distance="\n\n|---------|\n|  ISAN2  |\n| OFFLINE |\n|---------|"
else
    while :DX+:DY+:DZ!=0 do
        X1=math_floor(:x)
        Y1=math_floor(:y)
        Z1=math_floor(:z)
        X2=:DX-X1
        Y2=:DY-Y1
        Z2=:DZ-Z1
        D1=X2+Y2+Z2
        :Distance="\nX:"+X2+"m\nY:"+Y2+"m\nZ:"+Z2+"m\nTotal:\n"+D1+"m"
    end
    :Distance="\n\n No Target"
end